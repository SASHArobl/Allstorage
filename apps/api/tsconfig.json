{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "../../packages/*/src"],
      "pkg-crypto": ["../../packages/crypto/src/index.ts"],
      "pkg-crypto/*": ["../../packages/crypto/src/*"]
    },
    "rootDir": "../..",
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  }
}
